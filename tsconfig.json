{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*/*.d.ts"],
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types",
      "src/@types",
      "./src/assets/types/custom.d.ts"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
